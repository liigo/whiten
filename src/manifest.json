{
    "manifest_version": 2,

    "name": "Whiten",
    "description": "Clean up DOM elements for you",
    "version": "1.6.0",
    "author": "Liigo",

    "browser_action": {
        "default_icon": {
            "16": "icon16.png",
            "19": "icon19.png",
            "38": "icon38.png"
        },
        "default_title": "Whiten: clean up DOM elements for you",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "tabs",
        "storage"
    ],

    "icons": {
        "16": "icon16.png"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*", "file:///*/*"],
        "js": ["zepto.min.js", "content_script.js"]
    }],

    "options_page": "options.html"
}
