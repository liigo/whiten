{
    "manifest_version": 2,

    "name": "Whiten",
    "description": "Clean up DOM elements for you",
    "version": "1.1",
    "author": "Liigo",

    "browser_action": {
        "default_icon": {
            "19": "icon19.png",
            "38": "icon38.png"
        },
        "default_title": "Whiten: clean up DOM elements for you",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "tabs"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*", "file:///*/*"],
        "js": ["zepto.min.js", "content_script.js"]
    }]
}
